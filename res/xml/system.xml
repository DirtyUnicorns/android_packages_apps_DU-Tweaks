<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

         <Preference
            android:key="animations"
            android:fragment="com.dirtyunicorns.dutweaks.fragments.Animations"
            android:layout="@layout/preference_animations"
            android:title="@string/animations_category" />

         <Preference
            android:key="expanded_desktop"
            android:fragment="com.dirtyunicorns.dutweaks.fragments.ExpandedDesktop"
            android:layout="@layout/preference_expanded_desktop"
            android:title="@string/expanded_desktop_category" />

         <Preference
            android:key="powermenu"
            android:fragment="com.dirtyunicorns.dutweaks.fragments.PowerMenu"
            android:layout="@layout/preference_powermenu"
            android:title="@string/powermenu_category" />

         <Preference
            android:key="wakelockblocker"
            android:fragment="com.dirtyunicorns.dutweaks.fragments.WakelockBlocker"
            android:layout="@layout/preference_wakelockblocker"
            android:title="@string/wakelockblocker_category" />

         <PreferenceScreen
            android:key="hfm_settings"
            android:title="@string/hfm_pref_screen_title"
            android:layout="@layout/preference_adblocker"
            android:fragment="com.dirtyunicorns.dutweaks.fragments.HfmSettings" />

</PreferenceScreen>

